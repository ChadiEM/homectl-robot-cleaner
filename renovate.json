{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "pip_requirements": {
    "fileMatch": [
      "^requirements(\\-dev)?.txt$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "\\.py$"
      ],
      "matchStrings": [
        "^\\S+_CONTAINER_IMAGE_VERSION = \"(?<depName>.+?):(?<currentValue>.+?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
