{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
    ":automergeMinor"
  ],
  "labels": [
    "dependencies"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.py$"
      ],
      "matchStrings": [
        "^\\S+_CONTAINER_IMAGE_VERSION = \"(?<depName>.+?):(?<currentValue>.+?)\""
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
